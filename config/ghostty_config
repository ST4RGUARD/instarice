# By default Reload config with shft + cmd + , 

config-file = themes/rosepine
background = #000000
background-opacity = 0.80
background-blur-radius = 20

font-family = JetBrainsMonoNL Nerd Font 
font-size = 12
cursor-style = block
cursor-style-blink = false
cursor-invert-fg-bg = true

macos-titlebar-style = hidden
macos-option-as-alt = true
mouse-hide-while-typing = true

confirm-close-surface = false
window-decoration = true
window-padding-x = 10
window-padding-y = 10
window-padding-balance = true

auto-update = check
auto-update-channel = stable

# extras
shell-integration-features = no-cursor 
#copy-on-select = clipboard

# reload
keybind = super+d>r=reload_config

# Custom Keybinds & Config (super represents cmd key on mac)
# For Simple Keybinds
# splitting
keybind = super+d>r=new_split:right
keybind = super+d>d=new_split:down
keybind = super+d>e=equalize_splits

# nav
keybind = super+d>]=goto_split:right
keybind = super+d>[=goto_split:left
keybind = super+d>k=goto_split:top
keybind = super+d>j=goto_split:bottom

keybind = super+d>x=close_surface
